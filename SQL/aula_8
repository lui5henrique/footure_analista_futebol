SET SQL_SAFE_UPDATES = 0;
UPDATE selecao_br set machucado = 1 WHERE nome = 'Militão';
UPDATE selecao_br SET machucado = 1 WHERE nome = 'Richarlison';
UPDATE selecao_br SET capitao = TRUE WHERE nome = 'Marquinhos';
UPDATE selecao_br SET capitao = TRUE WHERE nome = 'Danilo';

-- SELECT * FROM selecao_br;


-- 1. Faça uma consulta para saber quem são os capitães da seleção.

SELECT id_jogador, nome, capitao FROM selecao_br
WHERE capitao = 1 ORDER BY id_jogador;

-- 2. Faça uma consulta e liste apenas os capitães que não estejam machucados.

SELECT id_jogador, nome, capitao FROM selecao_br
WHERE capitao = 1 AND machucado = 0 ORDER BY id_jogador;
